/* pages/schedule/schedule.wxss */

page {
    background: #f66775;
}

.schedule-page {
    padding-top: 40rpx;
    position: relative;
}

.decorate {
    position: absolute;
    top: 20rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 508rpx;
    height: 64rpx;
    z-index: 1;
}

.scroll-all {
    width: 94vw;
    margin-left: 3vw;
    margin-right: 3vw;
    box-sizing: border-box;
    border-radius: 10px;
    border: 3px solid #000;
    background: #fff;
    position: relative;
}

.scroll-all-bg {
    padding: 25px 5px;
    margin-left: 13vw;
    width: 79vw;
    height: 85vh;
    white-space: nowrap;
    box-sizing: border-box;
    border-radius: 10px;
}

.title-item {
    width: 15vw;
    height: 30px;
    box-sizing: border-box;
    display: inline-block;
    font-size: 12px;
    vertical-align: middle;
    line-height: 30px;
    text-align: center;
    color: #000;
    z-index: 1;
}

.class-item {
    border: 1rpx solid #eee;
    background: #fff;
    width: 15vw;
    height: 15vw;
    box-sizing: border-box;
    display: inline-block;
    vertical-align: middle;
    line-height: 36px;
    text-align: center;
    font-size: 12px;
    color: #fff;
}

.time {
    position: absolute;
    left: 1px;
    width: 12vw;
    margin-top: 55px;
}

.class-item-time {
    background: #fff;
    width: 12vw;
    box-sizing: border-box;
    text-align: center;
    font-size: 9px;
    color: #000;
    border: 1px solid #fff;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.empty {
    border-top-left-radius: 10px;
    background: #fff;
    width: 12vw;
    height: 11vw;
    box-sizing: border-box;
    display: inline-block;
    vertical-align: middle;
    line-height: 11vw;
    text-align: center;
    font-size: 9px;
    color: #000;
    position: fixed;
    top: 4vh;
}

.m-container {
    padding: 5rpx;
    width: 100%;
    height: 100%;
}

.add_class {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 45px;
    margin-top: 10rpx;
    background-color: rgba(255,255,255,0);
}

button::after {
    border: none;
}

.float-btn-part {
    position: fixed;
    bottom: 12vh;
    right: 6vw;
}

.add-btn {
    display: block;
    width: 72rpx;
    height: 72rpx;
    margin: 20rpx 0;
}

.bottom {
    color: #fff;
    font-size: 16px;
    background: #e65461;
    width: 100%;
    height: 48px;
    position: fixed;
    bottom: 0px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.shareBtn {
    left: 0px;
    bottom: 0px;
    right: 0px;
    position: fixed;
    height: 45px;
    width: 100%;
    display: flex;
    flex-direction: row;
    background-color: #00000000;
    align-items: center;
    justify-content: space-around;
    border: none;
    background: none;
    color: #fff;
    font-size: 16px;
}

.shareBtn::after {
    border: none;
}