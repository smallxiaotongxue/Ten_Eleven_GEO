/**index.wxss**/
.index-page {
  box-sizing: border-box;
}

.banner-wrap {
  padding: 15rpx 0 0;
  position: relative;
}

.banner-item {
  /* padding: 0 20rpx; */
}

.banner-item .banner-img {
  overflow: hidden;
  transition: transform .5s;
  transform: scale(0.9,0.75);
  width: 100%;
  height: 280rpx;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 15rpx rgba(0,0,0,0.4);
}

.banner-item .banner-img.active {
  transform: scale(0.95,0.9);
}

.banner-dots{
  position: absolute;
  bottom: 60rpx;
  width: 100%;
  height: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.dot{
    width: 6px;
    height: 6px;
    margin: 0 3px;
    border-radius: 3px;
    background-color: #fff;
}
.dot.active{
    width: 15px;
    background-color: #7090E8;
}