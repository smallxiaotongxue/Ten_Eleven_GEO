/**index.wxss**/
.index-page {
  box-sizing: border-box;
}

.banner-wrap {
  padding: 15rpx 0 0;
  position: relative;
}

.banner-item {
  /* padding: 0 20rpx; */
}

.banner-item .banner-img {
  overflow: hidden;
  transition: transform 0.5s;
  transform: scale(0.9, 0.75);
  width: 100%;
  height: 280rpx;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.4);
}

.banner-item .banner-img.active {
  transform: scale(0.95, 0.9);
}

.banner-dots {
  position: absolute;
  bottom: 60rpx;
  width: 100%;
  height: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.dot {
  width: 6px;
  height: 6px;
  margin: 0 3px;
  border-radius: 3px;
  background-color: #fff;
}
.dot.active {
  width: 15px;
  background-color: #7090e8;
}

.function-part {
  padding: 0 30rpx;
}

.function-part .function-item {
  min-height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
}

.function-part .function-item .icon {
  font-size: 32px;
  color: #999;
}

.function-title {
  margin: 0;
  padding: 10rpx 30rpx 20rpx;
  background: #fff;
  /*box-shadow: 10rpx 10rpx 15rpx 0rpx #ddd;*/
}

.function-title .title-name {
  font-size: 15px;
  font-weight: bold;
  color: #0e97ff;
  padding: 0 20rpx;
  border-left: 8rpx solid #0e97ff;
}

.ad {
  padding: 30rpx;
}

.ad .ad-img {
  width: 100%;
  height: 200rpx;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
}

.articles-contents {
  background: #f5f5f5;
}

.articles-list .list-item {
  background: #fff;
  padding: 15rpx 0;
  margin: 10rpx 0;
  transition: all .3s linear;
}

.articles-list .list-item:first-child {
  margin-top: 0;
}

.articles-list .list-item:active {
  background: #efefef;
}

.list-item .item-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 80rpx;
  padding: 0 20rpx;
}

.head-left {
  display: flex;
  align-items: center;
}

.upload-icon {
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx;
  border-radius: 50%;
}

.upload-name {
  font-size: 12px;
  margin: 0 5rpx;
}

.upload-module-name {
  color: #c2c2c2;
  font-size: 12px;
  margin: 0 20rpx;
}

.list-item .item-body {
  padding: 0 20rpx;
}

.news-title {
  font-size: 16px;
  font-weight: bold;
}

.news-intro {
  color: #c2c2c2;
  font-size: 12px;
  line-height: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.list-item .item-foot {
  padding: 0 20rpx;
  margin-top: 10rpx;
}

.news-comment {
  color: #c2c2c2;
  font-size: 12px;
  vertical-align: center;
  display: inline-block;
  margin-right: 20rpx;
}

.news-comment:before {
  content: '';
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background: #c2c2c2;
  margin-right: 10rpx;
}